# Production license for @nuxt/ui-pro, get one at https://ui.nuxt.com/pro/purchase
NUXT_UI_PRO_LICENSE=

# Supabase
SUPABASE_URL="https://example.supabase.co"
SUPABASE_KEY="<your_key>"

# Redis Configuration for Job Scheduler
REDIS_URL="rediss://username:password@localhost:6380"  # Use rediss:// for TLS connections
REDIS_USERNAME=""  # Optional: can be included in URL or set separately
REDIS_PASSWORD=""  # Optional: can be included in URL or set separately
REDIS_DB=0
REDIS_MODE="direct"  # "direct" for ioredis connection, "upstash" for REST API

# Job Scheduler Configuration  
SCHEDULER_MAX_MONITORS_PER_CYCLE=1000
SCHEDULER_TIMEOUT_SECONDS=45
SCHEDULER_BATCH_SIZE=50
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_RETRY_DELAY_MS=2000

# Queue Configuration - Queue names now loaded dynamically from database
# Legacy environment variables for fallback compatibility only
# QUEUE_US_EAST_NAME="monitoring-us-east"  # DEPRECATED - Now in database
# QUEUE_EU_WEST_NAME="monitoring-eu-west"  # DEPRECATED - Now in database
QUEUE_DEFAULT_REGION="us-east"

# Circuit Breaker Configuration
SCHEDULER_ENABLE_CIRCUIT_BREAKER=true
SCHEDULER_CIRCUIT_BREAKER_THRESHOLD=5
SCHEDULER_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Job Configuration
JOB_DEFAULT_ATTEMPTS=3
JOB_BACKOFF_TYPE="exponential"
JOB_BACKOFF_DELAY=2000
JOB_REMOVE_ON_COMPLETE=100
JOB_REMOVE_ON_FAIL=50

# Vercel Cron Authentication
CRON_SECRET="<your_secure_cron_secret>"

# Monitoring and Logging
SCHEDULER_LOG_LEVEL="info"
SCHEDULER_ENABLE_METRICS=true
SCHEDULER_METRICS_INTERVAL=30000
